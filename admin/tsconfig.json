{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".", // Set the base URL to the root directory "admin"
    "paths": {
      "@/*": [
        "app/*"
      ], // Alias for everything inside the "app" folder
      "@/components/*": [
        "components/*"
      ], // Alias for components inside "components"
      "@/lib/*": [
        "lib/*"
      ], // Alias for lib folder
      "@/utils/*": [
        "lib/utils.ts"
      ], // Alias for utils.ts inside lib
      "@/styles/*": [
        "app/*"
      ] // Alias for styles inside "app"
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.ts", // Include all TypeScript files under the "app" folder
    "app/**/*.tsx",
    "components/**/*.ts", // Include all TypeScript files in the "components" folder
    "components/**/*.tsx",
    "lib/**/*.ts" // Include all TypeScript files in the "lib" folder
  ],
  "exclude": [
    "node_modules"
  ]
}
